{{> header}}
<div class="container">
    <h1>Lista de Pintores</h1>
    {{#if pintores}}
    <table class="table table-dark table-hover" style="background-color: rgb(4, 75, 116); width: 95%;">
        <thead>
            <tr>
                <td>ID</td>
                <th>Pintor</th>
                <th>Pais de Origen</th>
                <th>Corriente</th>
                <th>Año de Nacimiento</th>
                <th>Año de Muerte</th>
                <th>Pintura</th>
            </tr>
        </thead>
        <tbody>
        {{#each pintores}}
            <tr>
                <td>{{ _id }}</td>
                <td>{{ nombre }}</td>
                <td>{{ pais }}</td>
                <td>{{ periodo }}</td>
                <td>{{ nacio }}</td>
                <td>{{ murio }}</td>
                <td><img src="../img/{{ img }}"</td>
            </tr>
        {{/ each}}
        </tbody>
    </table>
    {{ else }}
    <div>No se encontraron Pintores.</div>
        {{/ if}}
</div>
{{> footer}}